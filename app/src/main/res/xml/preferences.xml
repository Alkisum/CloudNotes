<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="interface"
        android:title="Interface">

        <ListPreference
            android:entries="@array/themes"
            android:entryValues="@array/themeIds"
            android:key="theme"
            android:title="Theme"/>

        <Preference
            android:key="primaryColor"
            android:title="Primary Color"/>

        <Preference
            android:key="accentColor"
            android:title="Accent Color"/>

        <SwitchPreference
            android:key="lightStatusBar"
            android:title="Light status bar"/>

        <SwitchPreference
            android:key="lightNavigationBar"
            android:title="Light navigation bar"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Cloud">

        <SwitchPreference
            android:key="savePath"
            android:title="Save remote path"/>

        <SwitchPreference
            android:key="saveAddress"
            android:title="Save server address"/>

        <SwitchPreference
            android:key="saveUsername"
            android:title="Save username"/>

        <SwitchPreference
            android:key="savePassword"
            android:title="Save password"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">

        <Preference
            android:key="about"
            android:title="About CloudNotes"/>

    </PreferenceCategory>

</PreferenceScreen>