<resources>

    <style name="MaterialLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="textColorPrimary">@color/text_color_primary_light</item>
        <item name="textColorSecondary">@color/text_color_secondary_light</item>
        <item name="bgColorCard">@color/bg_color_card_light</item>
    </style>

    <style name="MaterialDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="textColorPrimary">@color/text_color_primary_dark</item>
        <item name="textColorSecondary">@color/text_color_secondary_dark</item>
        <item name="bgColorCard">@color/bg_color_card_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlayLight" parent="Platform.ThemeOverlay.AppCompat">
        <item name="android:colorControlNormal">@color/text_color_secondary_light</item>
        <item name="android:textColorPrimary">@color/text_color_primary_light</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_light</item>
    </style>

    <style name="AppTheme.AppBarOverlayDark" parent="Platform.ThemeOverlay.AppCompat">
        <item name="android:colorControlNormal">@color/text_color_secondary_dark</item>
        <item name="android:textColorPrimary">@color/text_color_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingTop">24dp</item>
    </style>

